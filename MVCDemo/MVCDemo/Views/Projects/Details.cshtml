@model  IEnumerable<MVCDemo.Models.Module>

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Partial("_Modal")
<div id="content">
    <div class="text-center ">
        <h3>List of Module in Project : @Session["ProjectName"]</h3>
    </div>
    <div class="form-inline">
        <div id="action">
            <a href='@Url.Action("AddModule", "Modules", new { id = @Session["ID"], name = @Session["ProjectName"] })' class=" btn btn-info btn-modal"><i class="glyphicon glyphicon-plus"></i></a>
            <a href='@Url.Action("ModuleProject", "Modules", new { id = @Session["ID"], name = @Session["ProjectName"] })' class=" btn btn-danger btn-modal"><i class="glyphicon glyphicon-pencil"></i></a>
        </div>
    </div>
    <table class="table table-bordered text-center table-hover">
        <tr>
            <th>
                <div class="text-center">
                    ID
                </div>
            </th>
            <th>
                <div class="text-center">
                    Module Name
                </div>
            </th>
         </tr>
       @{if (Model.Count() == 0)
       {
        <tr>

            <td style="color:red;border-color:white" colspan="2">
                <h4>Records not found </h4>
            </td>

        </tr>
       }
       else
       {
           foreach (var item in Model)
           {
                    <tr>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.ID)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.ModuleName)
                        </td>
                   </tr>
             }
          }
      }
    </table>
    <div id="contentPage">
     @Html.Partial("_PagingDetailProject")
    </div>
    <p>
        @Html.ActionLink("Back to List", "Index")
    </p>
    @Html.Partial("_Footer")

</div>