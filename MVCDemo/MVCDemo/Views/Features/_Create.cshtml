@model MVCDemo.Models.Feature

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
@using (Html.BeginForm("Create", "Features", FormMethod.Post, htmlAttributes: new { @class = "form-add" }))
{

    @Html.AntiForgeryToken()
    <div class="modal-content">
        <div class="modal-header" id="add">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">Add Feature</h4>
        </div>
        <div class="form-horizontal">
            <div class="modal-body">

                <div class="form-group">
                    @Html.Label("Feature Name", htmlAttributes: new { @class = "control-label col-md-4 " })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.FeatureName, new { htmlAttributes = new { @class = "form-control ", @placeholder = "Enter Feature Name" } })

                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Feature Description", htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.FeatureDescription, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Feature Description" } })
                    </div>
                </div>
            </div><!--div modal body-->
            <div class="modal-footer">
                <div class="form-group">
                    <div class="col-md-10 text-left">
                        @Html.ValidationMessageFor(model => model.FeatureName, "", new { @class = "text-danger" })<br />
                        @Html.ValidationMessageFor(model => model.FeatureDescription, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        <button type="button" class="btn btn-warning" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div><!--div modal footer-->
        </div>
    </div><!--div modal content-->

}




