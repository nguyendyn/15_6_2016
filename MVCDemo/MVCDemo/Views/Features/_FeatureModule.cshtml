@model IEnumerable<MVCDemo.Models.Feature>

<script src="~/Scripts/myscript.js"></script>

<div id="content">
    @using (@Html.BeginForm("DropModule", "Features", new { id = @Session["ModuleId"], name = @Session["ModuleName"] }, FormMethod.Post, null))
    {
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <div class="text-center">
                    <h2>@Session["ModuleName"]</h2>
                </div>
            </div>
            <div class="modal-body">
                <table class="table table-bordered table-hover text-center">
                    <tr>
                        <th>
                            <div class="text-center">
                                <input type="checkbox" id="all" class="list" />
                            </div>

                        </th>
                        <th>
                            <div class="text-center">
                                ID
                            </div>
                        </th>

                        <th>
                            <div class="text-center">
                                Feature Name
                            </div>

                        </th>
                        <th>
                            <div class="text-center">
                                Feature Description
                            </div>

                        </th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" id="all" class="list" name="ids" value="@item.ID" />
                            </td>
                            <td>

                                @item.ID

                            </td>
                            <td class="text-center">
                                @item.FeatureName
                            </td>
                            <td class="text-center">
                                @item.FeatureDescription
                            </td>
                        </tr>
                    }
                </table>
                <div id="contentPage">
                   @Html.Partial("_PagingFeatureModule")
                </div>
            </div>
            <div class="modal-footer">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Drop" class="btn btn-danger" />
                        <button type="button" class="btn btn-warning" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div><!--div modal footer-->
        </div>
    }
</div>

