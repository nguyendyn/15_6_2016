                        <div class="col-md-7 col-xs-10 col-sm-10">
                            <ul id="nav" class="nav navbar-nav">
                                <li class="menu-dropdown classic-menu-dropdown">
                                    <a href="/Project/List"><i class="icon-folder"></i> Project</a>
                                </li>
                                <li class="menu-dropdown classic-menu-dropdown">
                                    <a href="/Database/List"><i class="icon-layers"></i> Database<span class="arrow"></span></a>
                                </li>
                                @Html.Partial("_Menu")
                            </ul>
                        </div>
                        <div class="col-md-5 col-xs-2 col-sm-2 search">
                            <div class="col-md-7 col-xs-10 col-sm-10 hidden-xs ">
                                @using (Html.BeginForm("SearchProject", "Item", FormMethod.Get, new { @class = " search-form" }))
                                {
                                    <div class="input-group">
                                        <input type="text" required class="form-control search-input" placeholder="Enter Project ID..." name="query" style="position: absolute;">
                                        <span class="input-group-btn">
                                            <a class="btn submit">
                                                <i class="icon-magnifier"></i>
                                            </a>
                                        </span>
                                    </div>
                                }
                            </div>
                            <div class="col-md-5 col-xs-2 col-sm-2 account">
