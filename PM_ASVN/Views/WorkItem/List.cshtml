@model ListItemModel
@using PM_ASVN.Models;
@{
    ViewBag.Title = "List";
    Layout = null;
}
<div class="table-scrollable">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th width="5%">ID</th>
                <th width="85%">Name</th>
                <th width="5%"></th>
            </tr>
        </thead>
        <tbody>
            @{int index = 0;
            if (Model.List != null)
            {
                foreach (var item in Model.List)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => item.ID)</td>
                        <td>@Html.DisplayFor(m => item.Name)</td>
                        <td>@(Model.Template != null ? Model.Template.Invoke(item) : null)</td>
                    </tr>
                    { index++; }
                }
            }

            }
            @if (index == 0)
            {
                <tr>
                    <td>
                        No record
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>


