@model Role
@using PM_ASVN.Common
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AperiaLayout.cshtml";

}
@Html.Partial("_Modal")
<div class="row">
    <div class="col-md-12">
        <div class="portlet light ">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-folder font-blue"></i>
                    <span class="caption-subject font-blue bold uppercase">List Role</span>
                </div>
                <div class="actions">
                    <a class="btn btn-modal blue" href="@Url.Action("Add", "Role")">+ New Role</a>
                </div>
            </div>
            <div class="portlet-body">
                @Html.Action("List", "Role", new { model = Model })
            </div>
        </div>
    </div>
</div>

<script>
    $(document).on("click", ".btn-modal", function () {
        var $modal = $('#myModal');
        var $modalDialog = $('.modal-dialog');
        var href = $(this).prop('href');
        var option = { backdrop: 'static' };
        $modalDialog.load(href, function () {
            $modal.modal(option, 'show');
        });
        return false;
    });
</script>
