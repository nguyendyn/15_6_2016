@model List<Permission>
@using PM_ASVN.Common
@{
    Layout = null;
    var IDRole = Session["Role_Id"] == null ? Session["IDRole"] : Session["Role_Id"];
}
<div class="table-scrollable">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th width="10%">ID</th>
                <th width="40%">Name</th>
                <th width="45%">Description</th>
                <th width="5%" style="text-align: right; "></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.ID
                        </td>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.Description
                        </td>
                        <td style="text-align:right">
                            <a class="btn btn-circle btn-outline btn-danger" href="@Html.Raw("/Item/DeletePermissionInRole?IDRole=" + IDRole  + "&IDPermission=" + item.ID)"><i class="icon-trash"></i></a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td>
                        No record
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

