@model List<Permission>
@using PM_ASVN.Common;
@{
    ViewBag.Title = "List";
    Layout = null;
}
<div class="table-scrollable">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th width="10%">ID</th>
                <th width="40%">Permission Name</th>
                <th width="45%">Description</th>
                <th width="5%" style="text-align: right; "></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.ID
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Description
                    </td>
                    <td style="text-align:right">
                        <a class="btn btn-circle btn-modal yellow-crusta pull-right" href="@Html.Raw("/Permission/Edit?IDPermission=" + item.ID)">Edit</a>
                    </td>
                </tr>
            }
            @if (Model.Count() == 0)
            {
                <tr>
                    <td>
                        No record
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div id="paging" style="text-align:center;">
        @Html.Partial("_Pagination")
    </div>
</div>



